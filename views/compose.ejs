<%- include partials/header.ejs %>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="textInput">Title</label>
        <input type="text" name="title" class="form-control" id="textInput">
    </div>
    <div class="form-group">
        <label for="bigTextInput">Text</label>
        <textarea name="text" id="bigTextInput" cols="30" rows="5" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

